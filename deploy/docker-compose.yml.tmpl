services:

  # PHP FPM Service
  web:
    container_name: ci3-web
    build:
      dockerfile: Dockerfile
      context: ./docker/php
    image: dokube/ci3
    environment:
      BASE_URL: http://localhost:8080/
      ENCRYPTION_KEY: random-key
      MYSQL_HOST: localhost
      MYSQL_DATABASE: my-db-name # mariadb env 와 일치 시킬 것
      MYSQL_USER: my-db-user # mariadb env 와 일치 시킬 것
      MYSQL_PASSWORD: my-db-password # mariadb env 와 일치 시킬 것
    volumes:
      - ../ci3:/var/www/html
      - ./docker/php/php-logging.conf:/usr/local/etc/php-fpm.d/zz-log.conf
    depends_on:
      - mariadb

  # Nginx Service
  nginx:
    container_name: ci3-nginx
    image: nginx:latest
    ports:
      - 8080:80
    links:
      - web
    volumes:
      - ../ci3:/var/www/html
      - ./docker/nginx:/etc/nginx/conf.d
    depends_on:
      - web

  # MariaDB Service
  mariadb:
    container_name: ci3-mariadb
    image: mariadb:latest
    restart: always
    command: [ "--character-set-server=utf8", "--collation-server=utf8_unicode_ci" ]
    environment:
      MYSQL_DATABASE: my-db-name # 실제 데이터로 수정
      MYSQL_USER: my-db-user # 실제 데이터로 수정
      MYSQL_PASSWORD: my-db-password # 실제 데이터로 수정
      MARIADB_ROOT_PASSWORD: my-db-password # 실제 데이터로 수정
      TZ: Asia/Seoul
    volumes:
      - ../volume/mysql:/var/lib/mysql
      - ../volume/backups:/var/backups
      - ../volume/sql:/docker-entrypoint-initdb.d
